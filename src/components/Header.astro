---
import { SITE_TITLE, INTERNAL_LINKS } from '../consts';
import HeaderLink from './HeaderLink.astro';
import { Icon } from 'astro-icon/components';
import SearchInput from './SearchInput.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="site-header">
	<nav class="max-w-[1200px] mx-auto flex items-center gap-3 px-3 py-3">
		<a href={INTERNAL_LINKS.HOME} class="flex items-center gap-2 text-[var(--text)] no-underline">
			<Icon name="line-md:cloud-alt-braces-loop" width="24" height="24" class="icon" />
			<strong>{SITE_TITLE}</strong>
		</a>
		<div class="flex-1"></div>
		<div class="hidden md:flex items-center">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/reviews">Reviews</HeaderLink>
			<HeaderLink href="/library">Library</HeaderLink>
			<HeaderLink href="/tracking">Tracking</HeaderLink>
			<!-- <div class="hidden md:block w-[320px]">
			<SearchInput placeholder="Search (Ctrl+K)" /> -->
		</div>
		<!-- <ThemeToggle /> -->
		<a href={INTERNAL_LINKS.ABOUT} class="ml-1 text-[var(--muted)] hover:text-[var(--text)]" title="About" aria-label="About">
			<Icon name="mdi:account" height="24" width="24" />
		</a>
	</nav>
</header>
<style>
	a { text-decoration: none; }
</style>
