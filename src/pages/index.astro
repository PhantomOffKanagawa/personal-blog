---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
			<main>
				<section class="text-center py-10">
					<h1 class="text-4xl md:text-6xl mb-2">Phantom Works</h1>
					<p class="text-[var(--muted)] max-w-2xl mx-auto">A minimal, spooky-mint theme for projects, blogs, reviews, and tracking—built with Astro and Tailwind, Obsidian-friendly, and modular by design.</p>
					<div class="mt-6 flex flex-wrap items-center justify-center gap-3">
						<a href="/blog" class="px-4 py-2 rounded-md border border-[var(--border)]">Blog</a>
						<a href="/reviews" class="px-4 py-2 rounded-md border border-[var(--border)]">Reviews</a>
						<a href="/library" class="px-4 py-2 rounded-md border border-[var(--border)]">Library</a>
						<a href="/tracking" class="px-4 py-2 rounded-md border border-[var(--border)]">Tracking</a>
					</div>
				</section>
				<section class="grid md:grid-cols-3 gap-4 mt-6">
					<div class="surface p-5 rounded-xl">
						<h3>Modular components</h3>
						<p class="text-[var(--muted)]">Atomic, reusable pieces that travel between public and private deployments.</p>
					</div>
					<div class="surface p-5 rounded-xl">
						<h3>Obsidian compatible</h3>
						<p class="text-[var(--muted)]">Bring your notes, images, and links—frontmatter is validated and flexible.</p>
					</div>
					<div class="surface p-5 rounded-xl">
						<h3>Fast and simple</h3>
						<p class="text-[var(--muted)]">Astro islands, Tailwind, and no fluff. Performance-first.</p>
					</div>
				</section>
			</main>
		<Footer />
	</body>
</html>
