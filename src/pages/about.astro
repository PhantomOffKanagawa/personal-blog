---
import Layout from '../layouts/BlogPost.astro';
import { getCollection, render } from 'astro:content';

const aboutEntries = await getCollection('about');
const about = aboutEntries[0];
const { Content } = about ? await render(about) : { Content: null } as any;
---

<Layout
	title="About Me"
	description="About page generated from external Markdown"
	createdDate={new Date('September 01 2025')}
>
				{Content ? <Content /> : (
					<article class="prose">
						<h1>About Me</h1>
						<p>Write your bio in BlogTest/public-content/about-me.md and it will appear here.</p>
					</article>
				)}
</Layout>
